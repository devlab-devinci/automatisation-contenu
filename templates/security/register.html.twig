{% extends 'security/layout.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
    <div class="sidenav">
        <div class="login-main-text">
            <img src="http://camilmesfioui.fr/autosoccer/logo-soccer.png" alt="logo">
            <h2>Application<br> Login Page</h2>
            <p>Login or register from here to access.</p>
        </div>
    </div>
    <div class="main">
        <div class="col-md-6 col-sm-12">
            <div class="login-form">
                {{ form_start(form) }}
                <div class="form-group">
                    {{ form_row(form.username) }}
                </div>
                <div class="form-group">
                    {{ form_row(form.email) }}
                </div>
                <div class="form-group">
                    {{ form_row(form.plainPassword.first) }}
                </div>
                <div class="form-group">
                    {{ form_row(form.plainPassword.second) }}
                </div>
                <a href="/" class="secondaryButton mr-3">Retour Ã  l'accueil</a><button class="primaryButton" type="submit">S'inscrire</button>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
