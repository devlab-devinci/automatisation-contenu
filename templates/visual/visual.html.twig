{% extends 'base.html.twig' %}

{% block title %}Création de visuel{% endblock %}

{% block body %}
    <div class="container my-5">
        {{ form_start(form) }}
            <div class="form-group">
                {{ form_row(form.photo) }}
            </div>
            <div class="form-group">
                {{ form_row(form.submit) }}
            </div>
        {{ form_end(form) }}
        {% if status == 'not a picture' %}
            <div class="text-center">
                <p>Ceci n'est pas une image</p>
            </div>
        {% endif %}
        {% if photo %}
            <div class="text-center mb-5">
                <p>Vous avez mis cette photo en ligne :</p>
                <img class="photoSubmitted" src="{{ photo }}" alt="Photo upload" />
            </div>
            <div class="row">
                <div class="col-md-12 text-center">
                    <a href="/creation" class="btn-custom">Créer un visuel</a>
                </div>
            </div>
        {% endif %}
    </div>
{% endblock %}
